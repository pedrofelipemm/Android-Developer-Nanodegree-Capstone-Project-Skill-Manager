<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="study.pmoreira.skillmanager.ui.skill.EditSkillActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/skill_placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/skill_image_height"
                android:scaleType="centerInside"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/default_margin2x"
                tools:text="Android"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/default_margin2x"
                android:src="@mipmap/ic_launcher_round"/>

        </FrameLayout>

        <TextView
            android:id="@+id/skill_learn_more_textview"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin2x"
            android:layout_marginRight="@dimen/default_margin2x"
            android:clickable="true"/>

    </LinearLayout>

</ScrollView>
